
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="../../docs-assets/ico/favicon.png">

    <title>Feed</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <style>
      body {
        min-height: 2000px;
        padding-top: 20px;
      }
    </style>

    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]><script src="../../docs-assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <%
      function getEmail() {
        if(user != null) { return user.email; } 
        else { return "anon"; } 
      }
    %>  

    <div class="container" style="max-width:750px;">
      <!-- Static navbar -->
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">The Feed</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a><%= getEmail() %></a></li>
            <li>
              <% if (user != null) { %>
                <a href="./logout">Logout</a>
              <% } else { %>
                <a href="./login">Login</a>
              <% } %>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>

      <% if (user != null) { %>
        <form id="postform" action="/post/new" method="post" accept-charset="utf-8">
          <textarea class="form-control" rows="3" name="body" placeholder="Post to spotted"></textarea>
          <div class="input-group input-group-sm" style="margin-top:5px">
              <input type="text" class="form-control" name="location" placeholder="Where are you?">
              <span class="input-group-btn">
                <button class="btn btn-default" type="submit" value="Send">Post anon</button>
              </span>
          </div><!-- /input-group -->
        </form>
      <% } %>


      <% posts.forEach( function( post ){ %>
        <div class="media">
          <a class="pull-left" href="#">
          <img class="media-object" src="/crest.jpg" height="60" width="49">
          </a>
          <div class="media-body">
            <h4 class="media-heading"><%= post.location %></h4>
            <div style="min-height:20px;">
              <%= post.body %>
            </div>
           
            <% post.comments.forEach(function(comment){ %>
              <div class="media">
                <div class="pull-left" style="max-width:14px;">
                  <a href="#"><span class="glyphicon glyphicon-chevron-up"></span></a>
                  <a href="#"><span class="glyphicon glyphicon-chevron-down" style="margin-left:-1px;"></span></a>
                </div>
                <div class="media-body">
                  <h5 class="media-heading"><%= comment.date %></h5>
                  <%= comment.body %>
                </div>
              </div>
            <% }); %>

            <% if (user != null) { %>
              <form id ="addcomment" action="/post/<%=post._id%>/comment" method="post">
                <div class="input-group input-group-sm" style="margin-top:10px">
                  <input type="text" class="form-control"  name="body" placeholder="Comment">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="submit" value="Send">Post</button>
                  </span>
                </div><!-- /input-group -->
              </form>  
            <% } %>
          </div>
        </div>  
      <% }); %>  

    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.js"></script>
  </body>
</html>
